<launch>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="gui" default="true"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!-- <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/> -->
    </include>

    <node name="aruco" pkg="gazebo_ros" type="spawn_model" args="-file $(find humanFiducialTracker)/urdf/aruco.sdf -sdf -x 1 -y 0 -z 1 -model aruco_marker" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    <param name="use_gui" value="$(arg gui)"/>

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find humanFiducialTracker)/rviz/turtlebot.rviz" required="true"/>

    <!-- <include file="$(find aruco_detect)/launch/aruco_detect.launch"/> -->
    <node name="aruco_detect" pkg="aruco_detect" type="aruco_detect">
    <param name="image_transport" value="compressed" />
    <param name="publish_images" value="true" />
    <param name="dictionary" value="0" />
    <param name="do_pose_estimation" value="true" />
    <param name="ignore_fiducials" value="" />
    <param name="fiducial_len_override" value="" />
    <!-- <include file="$(find aruco_detect)/launch/aruco_detect.launch"> -->
    <remap from="/camera/compressed" to="/camera/rgb/image_raw/compressed" />
    <remap from="/camera_info" to="/camera/rgb/camera_info" />
    </node>
    <!-- </include> -->
</launch>
